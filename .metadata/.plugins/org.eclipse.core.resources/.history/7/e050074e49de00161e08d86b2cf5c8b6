package ffff;


	import java.util.Scanner; 
	import java.util.ArrayList; 

	public class rensyu { 

	 private static Scanner sc; 

public static void main(String[] args) { 

	    sc = new Scanner(System.in); 

  char [] n = new char[10]; // 부호 

      String [] c = {"","","","","","","","","","","","",""}; // 숫자1 

	  //String a=""; 스트링을 이용한 숫자넣기 

     System.out.print("계산기:"); 

	  String num = sc.nextLine(); 
   int index=0; 

     for(int i = 0; i < num.length(); i++) 

	    { 

        if(num.charAt(i) == '+' || num.charAt(i) == '-'|| num.charAt(i) == '*' || num.charAt(i) == '/' ) 

	        { 

	         n[i] = num.charAt(i); //부호 넣기 

         index++; 

       } 

        else 

	        { 

         c[index]+=num.charAt(i); //숫자 넣기 

	                 

	      } 

	     } 

	      System.out.println(n); 

	   for(int i = 0; i < c.length; i++) 

	    { 

	      System.out.println(i+":"+c[i]); 

	   } 

      int sum = (int).c[0]; // 이부분이 헷갈립니다. 

    for(int i = 0; i < n.length; i++)  // 이부분이 헷갈립니다. 

     { 

      n[i],c[i+1]  // 이부분이 헷갈립니다. 

     } 



    //System.out.println(" "); 

    for(int i=0;i<n.length;i++) 

   { 

      //System.out.println(i+"-> n: "+ (char)n[i]); 

      //System.out.print(" c: " + (char)c[i]); 

   // System.out.println(" c1: " + (char)c1[i]); 

}  
	     

   } 



}
